{
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "array-type": [
            true,
            "array"
        ],
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "class-name": false,
        "forin": false,
        "interface-name": false,
        "max-classes-per-file": false,
        "max-line-length": false,
        "no-conditional-assignment": false,
        "no-shadowed-variable": false,
        "object-literal-sort-keys": false,
        "trailing-comma": [
            true,
            {
                "multiline": "never",
                "singleline": "never"
            }
        ]
    }
}