{
	"name": "gods-hera",
	"displayName": "gods-hera",
	"description": "Extension to exchange files with Zeus",
	"version": "0.0.7",
	"publisher": "daanrutten",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Programming Languages",
		"Extension Packs",
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/daanrutten/gods-hera.git"
	},
	"activationEvents": [
		"onCommand:extension.updateSource",
		"onCommand:extension.updateAssets",
		"onCommand:extension.cleanAssets",
		"onCommand:extension.updateRoles",
		"onCommand:extension.createProject",
		"onCommand:extension.compileHtml",
		"onCommand:extension.compileJson",
		"onCommand:extension.compileCss"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.updateSource",
				"title": "Update source",
				"category": "Hera"
			},
			{
				"command": "extension.updateAssets",
				"title": "Update assets",
				"category": "Hera"
			},
			{
				"command": "extension.cleanAssets",
				"title": "Clean assets",
				"category": "Hera"
			},
			{
				"command": "extension.updateRoles",
				"title": "Update roles",
				"category": "Hera"
			},
			{
				"command": "extension.createProject",
				"title": "Create project",
				"category": "Hera"
			},
			{
				"command": "extension.compileHtml",
				"title": "Compile HTML",
				"category": "Hera"
			},
			{
				"command": "extension.compileJson",
				"title": "Compile JSON",
				"category": "Hera"
			},
			{
				"command": "extension.compileCss",
				"title": "Compile CSS",
				"category": "Hera"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "extension.updateSource",
					"group": "Hera"
				},
				{
					"command": "extension.updateAssets",
					"group": "Hera"
				},
				{
					"command": "extension.cleanAssets",
					"group": "Hera"
				},
				{
					"command": "extension.updateRoles",
					"group": "Hera"
				},
				{
					"command": "extension.createProject",
					"group": "Hera"
				}
			],
			"editor/context": [
				{
					"when": "resourceLangId == opl && editorHasSelection",
					"command": "extension.compileHtml",
					"group": "Hera"
				},
				{
					"when": "resourceLangId == opl && editorHasSelection",
					"command": "extension.compileJson",
					"group": "Hera"
				},
				{
					"when": "resourceLangId == opl && editorHasSelection",
					"command": "extension.compileCss",
					"group": "Hera"
				}
			]
		},
		"languages": [
			{
				"id": "opl",
				"aliases": [
					"OPL",
					"opl"
				],
				"extensions": [
					".opl"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "opl",
				"scopeName": "source.opl",
				"path": "./src/opl.tmLanguage"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production"
	},
	"devDependencies": {
		"@types/css": "0.0.31",
		"@types/node": "^12.11.7",
		"@types/parse5": "^5.0.2",
		"@types/request-promise-native": "^1.0.17",
		"@types/vscode": "^1.40.0",
		"ts-loader": "^6.2.1",
		"tslint": "^5.20.0",
		"typescript": "^3.6.4",
		"webpack": "^4.41.3",
		"webpack-cli": "^3.3.10"
	},
	"dependencies": {
		"css": "^2.2.4",
		"firebase": "^7.5.2",
		"parse5": "^5.1.1",
		"request": "^2.88.0",
		"request-promise-native": "^1.0.8"
	}
}
